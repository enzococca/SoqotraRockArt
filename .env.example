# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# For local development: sqlite:///rockart.db
# For production: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///rockart.db

# Dropbox Configuration
USE_DROPBOX=True
DROPBOX_ACCESS_TOKEN=your-dropbox-access-token-here

# Cloud Optimized GeoTIFF (COG) for Orthophoto
# Get this URL from Dropbox: Share folder → Create link → Change dl=0 to dl=1
DROPBOX_COG_URL=https://www.dropbox.com/scl/fi/xxxxx/orthophoto_shp042_cog.tif?rlkey=xxxxx&dl=1

# Optional: Override folder paths
# DROPBOX_ORIGINAL_FOLDER=/Soqotra/ROCKART DATABASE/original_images
# DROPBOX_THUMBNAIL_FOLDER=/Soqotra/ROCKART DATABASE/thumbnails
